<%- include('includes/head'); %>
<%- include('includes/nav.ejs')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-12 my-3">
      <h1 class="text-center">Agenda</h1>

      <%if(user) {%>
      <h4 class="text-center">Ol√° <%= user.email %></h4>
      <p class="text-center">Seja bem vindo de volta</p>
      <%}%>
        <%- include('includes/messages') %>
      <div class="responsive-table">
        <table class="table my-3">
          <thead class="bold">Contato</thead>
          <% contatos.forEach(contato => {%>
            <tr>
              <td><%= contato.nome %></td>
              <td><%= contato.sobrenome %></td>
              <td><%= contato.email %></td>
              <td><%= contato.telefone %></td>
              <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
              <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
            </tr>
           <%})%>
        </table>
      </div>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

